# Medical Vector Database Environment Variables

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="Medical Vector Database API"
API_VERSION=1.0.0

# Database Settings
CHROMA_DB_PATH=./data/chroma_db
VECTOR_DIMENSION=768

# OCR Settings
OCR_LANGUAGE=eng
OCR_CONFIG=--psm 6
TESSERACT_PATH=  # Set to path if Tesseract is not in PATH

# NER Settings
NER_MODEL=en_core_web_sm
MEDICAL_NER_MODEL=en_core_sci_md
CONFIDENCE_THRESHOLD=0.7

# File Processing
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=./data/raw
PROCESSED_DIR=./data/processed

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Processing
BATCH_SIZE=10
MAX_WORKERS=4

# Security (for production)
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# Optional: Database settings for production
# DATABASE_URL=postgresql://user:password@localhost/medical_db
# REDIS_URL=redis://localhost:6379

# Optional: External services
# OPENAI_API_KEY=your_openai_key_here
# AZURE_OCR_KEY=your_azure_key_here 